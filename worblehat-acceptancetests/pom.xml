<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>de.codecentric.psd</groupId>
		<artifactId>worblehat-build</artifactId>
		<version>2.8.0</version>
		<relativePath>../worblehat-build</relativePath>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>worblehat-acceptancetests</artifactId>
	<name>worblehat-acceptancetests</name>
	<url>http://${env.PSD_SERVER}/site/worblehat-acceptancetests</url>


	<build>
		<resources>

			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jbehave</groupId>
				<artifactId>jbehave-maven-plugin</artifactId>
				<version>${jbehave.core.version}</version>
				<executions>
					<execution>
						<id>unpack-view-resources</id>
						<phase>process-resources</phase>
						<goals>
							<goal>unpack-view-resources</goal>
						</goals>
					</execution>
					<execution>
						<id>embeddable-stories</id>
						<phase>integration-test</phase>
						<configuration>
							<includes>
								<include>${embeddables}</include>
							</includes>
							<excludes />
							<ignoreFailureInStories>true</ignoreFailureInStories>
							<ignoreFailureInView>false</ignoreFailureInView>
							<threads>1</threads>
							<metaFilters>
								<metaFilter></metaFilter>
							</metaFilters>
						</configuration>
						<goals>
							<goal>run-stories-as-embeddables</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.jbehave</groupId>
										<artifactId>
											jbehave-maven-plugin
										</artifactId>
										<versionRange>
											[3.6.6,)
										</versionRange>
										<goals>
											<goal>
												unpack-view-resources
											</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<profiles>
		<!-- profile for various browsers. set the BROWSER_PROFILE property can 
			be activated from hudson by setting the environment variable maven.browser-profile 
			to firefox, iexplorer or chrome -->
		<profile>
			<id>xp</id>
			<activation>
				<property>
					<name>maven.browser-os</name>
					<value>xp</value>
				</property>
			</activation>
			<properties>
				<BROWSER_OS>XP</BROWSER_OS>
			</properties>
		</profile>
		<profile>
			<id>vista</id>
			<activation>
				<property>
					<name>maven.browser-os</name>
					<value>vista</value>
				</property>
			</activation>
			<properties>
				<BROWSER_OS>VISTA</BROWSER_OS>
			</properties>
		</profile>
		<profile>
			<id>linux</id>
			<activation>
				<property>
					<name>maven.browser-os</name>
					<value>linux</value>
				</property>
			</activation>
			<properties>
				<BROWSER_OS>LINUX</BROWSER_OS>
			</properties>
		</profile>
		<profile>
			<id>firefox</id>
			<activation>
				<property>
					<name>maven.browser-profile</name>
					<value>firefox</value>
				</property>
			</activation>
			<properties>
				<BROWSER_PROFILE>FIREFOX</BROWSER_PROFILE>
				<BROWSER_VERSION>10</BROWSER_VERSION>
			</properties>
		</profile>
		<profile>
			<id>iexplorer8</id>
			<activation>
				<property>
					<name>maven.browser-profile</name>
					<value>iexplorer8</value>
				</property>
			</activation>
			<properties>
				<BROWSER_PROFILE>IE</BROWSER_PROFILE>
				<BROWSER_VERSION>8</BROWSER_VERSION>
			</properties>
		</profile>
		<profile>
			<id>iexplorer9</id>
			<activation>
				<property>
					<name>maven.browser-profile</name>
					<value>iexplorer9</value>
				</property>
			</activation>
			<properties>
				<BROWSER_PROFILE>IE</BROWSER_PROFILE>
				<BROWSER_VERSION>9</BROWSER_VERSION>
			</properties>
		</profile>
		<profile>
			<id>chrome</id>
			<activation>
				<property>
					<name>maven.browser-profile</name>
					<value>chrome</value>
				</property>
			</activation>
			<properties>
				<BROWSER_PROFILE>CHROME</BROWSER_PROFILE>
				<BROWSER_VERSION></BROWSER_VERSION>
			</properties>
		</profile>
		<profile>
			<id>local</id>
			<properties>
				<BASE_URL>http://localhost:8080</BASE_URL>
				<CONTEXT>worblehat-web</CONTEXT>
				<DB_URL>jdbc:mysql://localhost/worblehat</DB_URL>
				<DB_USER>worblehat</DB_USER>
				<DB_PASSWORD>worblehat</DB_PASSWORD>
				<BROWSER>${BROWSER_PROFILE}</BROWSER>
			</properties>
		</profile>
		<profile>
			<id>ci</id>
			<activation>
				<property>
					<!-- this is set automatically by Hudson, thus, configure here what 
						is different when tests are run on hudson server -->
					<name>env.WORKSPACE</name>
				</property>
			</activation>
			<properties>
				<BASE_URL>http://psd:codecentric@${env.PSD_SERVER}</BASE_URL>
				<CONTEXT>worblehat</CONTEXT>
				<DB_URL>jdbc:mysql://localhost/worblehat</DB_URL>
				<DB_USER>worblehat</DB_USER>
				<DB_PASSWORD>worblehat</DB_PASSWORD>
				<SELENIUM_SERVER_HOST>ondemand.saucelabs.com:80/wd/hub</SELENIUM_SERVER_HOST>
				<TEST_DESCRIPTION>Running Worblehat acceptance tests on
					${BROWSER_OS} with ${BROWSER_PROFILE} ${BROWSER_VERSION}</TEST_DESCRIPTION>
			</properties>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>org.jbehave</groupId>
			<artifactId>jbehave-core</artifactId>
			<version>${jbehave.core.version}</version>
			<classifier>resources</classifier>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>org.jbehave</groupId>
			<artifactId>jbehave-guice</artifactId>
			<version>${jbehave.core.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.jbehave.site</groupId>
			<artifactId>jbehave-site-resources</artifactId>
			<version>${jbehave.site.version}</version>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-remote-driver</artifactId>
			<version>${selenium.version}</version>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-chrome-driver</artifactId>
			<version>${selenium.version}</version>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-firefox-driver</artifactId>
			<version>${selenium.version}</version>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-htmlunit-driver</artifactId>
			<version>${selenium.version}</version>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-ie-driver</artifactId>
			<version>${selenium.version}</version>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-support</artifactId>
			<version>${selenium.version}</version>
		</dependency>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
		<dependency>
			<groupId>de.codecentric</groupId>
			<artifactId>jbehave-junit-runner</artifactId>
			<version>1.0.1</version>
		</dependency>
<dependency>
    <groupId>org.jbehave.web</groupId>
    <artifactId>jbehave-web-selenium</artifactId>
    <version>3.5.3</version>
</dependency>
	</dependencies>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jbehave.core.version>3.6.6</jbehave.core.version>
		<jbehave.site.version>3.1.1</jbehave.site.version>
		<selenium.version>2.31.0</selenium.version>
		<embeddables>**/*Stories.java</embeddables>
		<SELENIUM_SERVER_HOST>localhost</SELENIUM_SERVER_HOST>
		<SELENIUM_PORT>4455</SELENIUM_PORT>
		<BROWSER_PROFILE>firefox</BROWSER_PROFILE>
		<BASE_URL>localhost:8080</BASE_URL>
		<CONTEXT>/worblehat-web</CONTEXT>
	</properties>
</project>
